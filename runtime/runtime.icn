# print method (with space separation)
procedure print(x[])
    prints !x # Idk why this syntax, but it works
    write()
end

procedure prints(x[])
    every k := 1 to *x do {
        if type(x[k]) === "list" then {
            write_list(x[k])
        } else if type(x[k]) === "table" then {
            write_dict(x[k])
        } else {
            writes(x[k])
        }
        if (k < *x ) then writes(" ")
    }
end

procedure write_list(x)
    if *x == 0 then {
        writes("[]")
    } 
    else {
        writes("[")
        every k := 1 to *x - 1 do {
            if type(x[k]) === "list" then {
                write_list(x[k])
            } else if type(x[k]) === "table" then {
                write_dict(x[k])
            } else {
                writes(x[k], ", ")
            }
        }
        prints(x[*x])
        prints("]")
    }
end

procedure write_dict(x)
    if *x == 0 then {
        writes("{}")
    } 
    else {
        writes("{")
        every k := key(x) do {
            writes(k, ": ", x[k], ", ")
        }
        writes("}")
    }
end
