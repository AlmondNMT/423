procedure round(x[])
    if *x == 1 then {
        return integer(x[1])
    }
    else if *x == 2 then {
        a := x[1]
        b := x[2]
        rhs := a * 10 ^ b % 1 * 10
        if rhs > 5 then a +:= 1.0 / (10 ^ b)
        return integer(a * 10 ^ b) / 10.0 ^ b
    }
end

